<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:PL"
        xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="PL.MainWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"
        Title="MainWindow" Height="664" Width="1152">

    <Window.Resources>
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchBorder"
                            CornerRadius="15"
                            Background="LightGray"
                            BorderBrush="Gray"
                            BorderThickness="1"/>
                            <Ellipse x:Name="SwitchKnob"
                             Width="26" Height="26"
                             Fill="White"
                             Margin="2"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="DodgerBlue"/>
                                <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="border" BorderBrush="#2A2929" BorderThickness="10" CornerRadius="5">
        <Grid x:Name="maingrid" Background="{DynamicResource BackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="13" Grid.RowSpan="2" BorderBrush="#425064" BorderThickness="5" CornerRadius="5">
                <Rectangle Fill="#425064"/>
            </Border>


            <TextBlock x:Name="ChangingLabel" Text="{DynamicResource AppTitleText}" Foreground="#ffffff" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" TextAlignment="Center" FontSize="12" Grid.Column="6" Grid.ColumnSpan="4" Grid.RowSpan="2" VerticalAlignment="Center" Margin="0,0,40,0" FontWeight="Bold" Height="50"/>
            <Image Source="/Resources/Images/Exit.png" Cursor="Hand" Grid.RowSpan="2" Height="40" Margin="0 0 30 0" MouseLeftButtonDown="Image_MouseLeftButtonDown" />
            <Image Source="/Resources/Images/Heyam.png" Grid.Column="12" Grid.RowSpan="2" Height="44" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" Width="49"/>
            <TextBlock Text="{DynamicResource LawOfficeText}" Foreground="#ffffff" Grid.Column="10" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="16" FontWeight="Bold" Margin="51,5,0,0" Grid.RowSpan="2" />
            <TextBlock x:Name="Lawyer_Name" Text="حسین محمدی نصیر" Foreground="#ffffff" FontStyle="Italic" TextAlignment="Right" Grid.Column="9" Grid.ColumnSpan="4" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="16" FontWeight="Bold" Margin="65,29,0,0" RenderTransformOrigin="0.565,0.48" Grid.RowSpan="2" Width="220" />
            <hc:SearchBar Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="3" Background="#f1f1f1" Height="40" Margin="0 0 20 0" BorderBrush="#A09F9F"/>
            <Border Margin="10" Grid.Column="10" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="11" BorderBrush="#2D25C8" BorderThickness="2" CornerRadius="5">
                <Rectangle Stroke="{DynamicResource BorderBrush}"
                StrokeThickness="2"
                Fill="{DynamicResource FillRectangle}"
                RadiusX="10" RadiusY="10"/>
            </Border>
            <Border Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="4" Margin="10" BorderBrush="#FF464D90" BorderThickness="5" CornerRadius="10" >
                <Rectangle Fill="#FF464D90"/>
            </Border>
            <Border Grid.Row="2" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="3" Margin="10" BorderBrush="#41B01C" BorderThickness="2" CornerRadius="5" >
                <Rectangle Fill="#41B01C"/>
            </Border>
            <Border Grid.Row="2" Grid.RowSpan="3" Grid.Column="7" Grid.ColumnSpan="3" Margin="10" BorderBrush="#2D25C8" BorderThickness="2" CornerRadius="5" >
                <Rectangle 
                StrokeThickness="2"
                Fill="{DynamicResource FillRectangle}"
                RadiusX="10" RadiusY="10"/>
            </Border>
            <Border Grid.Row="5" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="3" Margin="10" BorderBrush="{DynamicResource BackgroundBrush}" BorderThickness="5" CornerRadius="10" >
                <Rectangle 
                StrokeThickness="2"
                Fill="{DynamicResource BackgroundBrush}"
                RadiusX="10" RadiusY="10"/>
            </Border>
            <Border Grid.Row="11" Grid.Column="7" Grid.ColumnSpan="3" Margin="5" BorderBrush="#2D25C8" BorderThickness="2" CornerRadius="5" >
                <Rectangle
                StrokeThickness="2"
                Fill="{DynamicResource FillRectangle}"
                RadiusX="10" RadiusY="10"/>
            </Border>
            <Border Grid.Row="5" Grid.RowSpan="7" Grid.ColumnSpan="7" Margin="5" BorderBrush="#FF464D90" BorderThickness="3" CornerRadius="10" >
                <Rectangle Stroke="{DynamicResource BorderBrush}"
                StrokeThickness="2"
                Fill="{DynamicResource FillRectangle1}"
                RadiusX="10" RadiusY="10"/>
            </Border>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="115 30 10 10" Cursor="Hand" Grid.Row="2" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="Client_TextBlock" Margin="-60 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource ClientsManagement}" MouseLeftButtonDown="Client_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Users.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="55 30 10 10" Cursor="Hand" Grid.Row="3" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="CaseManagement_TextBlock" Margin="-10 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource CasesManagement}" MouseLeftButtonDown="CaseManagement_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Cases_Management.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="55 30 10 10" Cursor="Hand" Grid.Row="4" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="Automation_TextBlock" Margin="5 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource LegalAutomation}" MouseLeftButtonDown="Automation_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/AdlIran.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80 30 5 10" Cursor="Hand" Grid.Row="5" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="FinancialManagementForm_TextBlock" Margin="-75 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource FinancialManagement}" MouseLeftButtonDown="FinancialManagementForm_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Financial-Management.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="45,45,0,0" Cursor="Hand" Grid.Row="6" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3" Width="229">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="LegalInfoBank_TextBlock" Margin="10 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource LegalInfoBank}" MouseLeftButtonDown="LegalInfoBank_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Users_Management.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="75 30 10 10" Cursor="Hand" Grid.Row="7" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="Activities_TextBlock" Margin="-30 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource ActivitiesReminders}" MouseLeftButtonDown="Activities_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Reminders.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80 30 10 10" Cursor="Hand" Grid.Row="8" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="SMSPanel_TextBlock" Margin="30 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource SMSPanel}" MouseLeftButtonDown="SMSPanel_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/SMS.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="70 30 10 10" Cursor="Hand" Grid.Row="9" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="Reports_TextBlock" Margin="55 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource Reports}" MouseLeftButtonDown="Reports_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Reports.png"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80 30 10 10" Cursor="Hand" Grid.Row="10" Grid.RowSpan="2" Grid.Column="10" Grid.ColumnSpan="3">
                <TextBlock Style="{StaticResource TextBlockStyle}" x:Name="Settings_TextBlock" Margin="52 13 10 0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="{DynamicResource Settings}" MouseLeftButtonDown="Settings_TextBlock_MouseLeftButtonDown"/>
                <Image Height="40" Source="Resources/Images/Settings.png"/>
            </WrapPanel>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.RowSpan="2" Grid.Column="7" Grid.ColumnSpan="3" Text="{DynamicResource RegisteredClientsText}" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="22" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="ClientAmountText" Margin="0,39,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="3" Grid.RowSpan="2" Grid.Column="8" Text="0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="24" FontWeight="Bold" Foreground="White" Height="34"/>
            <Image Margin="0 0 40 15" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3" Grid.RowSpan="2" Grid.Column="7" Grid.ColumnSpan="3" Height="55" Source="Resources/Images/Users.png"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.RowSpan="2" Grid.Column="4" Grid.ColumnSpan="3" Text="{DynamicResource Current-ClosedCasesText}" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="20" FontWeight="Bold" Foreground="#ffffff"/>
            <TextBlock x:Name="ActiveCasesText" Margin="20,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.RowSpan="2" Grid.Column="5" Text="0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="24" FontWeight="Bold" Foreground="#ffffff" Width="59" Height="40"/>
            <TextBlock x:Name="ClosedCasesText" Margin="33,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.RowSpan="2" Grid.Column="4" Text="0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="24" FontWeight="Bold" Foreground="#ffffff" Width="59" Height="40"/>

            <Image Margin="0,21,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.RowSpan="2" Height="50" Source="Resources/Images/User.png"/>
            <TextBlock x:Name="NameText" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4" Text="{DynamicResource UserInfoText}" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="20" FontWeight="Bold" Margin="0,29,20,0" Width="185" TextAlignment="Right" Foreground="White"/>
            <TextBlock x:Name="UserNameText" Margin="23,18,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Grid.ColumnSpan="4" Text="Username" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.526,0.323" Width="172" Foreground="White"/>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="4" Grid.ColumnSpan="2" Text="{DynamicResource TodayRemindersText}" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="18" FontWeight="Bold" Margin="0,0,50,18" Foreground="White" Width="124" Grid.Column="2"/>
            <TextBlock x:Name="TodayRemindsText" Margin="34,7,44,0" VerticalAlignment="Top" Grid.Row="4" Text="0" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="20" FontWeight="Bold" RenderTransformOrigin="1.372,0.468" Foreground="White" Height="26"/>
            <hc:PersianCalendar x:Name="Calender" Grid.Row="5" Grid.RowSpan="6" Grid.Column="7" Grid.ColumnSpan="3" Margin="12" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)"/>
            <local:UC_ClockMainWindow Grid.Row="11" Grid.Column="7" Grid.ColumnSpan="3" FontSize="25" Foreground="White" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)"/>
            <!--<local:UC_Reminder Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="7" Margin="15"/>-->
            <TextBlock x:Name="UserNameText1" HorizontalAlignment="Left" Grid.Row="3" Text="{DynamicResource UserNameText}" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="16" FontWeight="Bold" Margin="1,21,0,10" Width="72" Foreground="White" Grid.Column="3" TextAlignment="Right"/>
            <Image Source="/Resources/Images/Reminders.png" Margin="41,6,13,18" Grid.Column="3" Grid.Row="4" />
            <Image Source="/Resources/Images/ClosedCases.png" Margin="79,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Grid.RowSpan="2" Grid.Column="5" Height="55" Grid.ColumnSpan="2" Width="55"/>
            <TextBlock x:Name="ScreenModeText" Text="🌞" FontSize="16" Foreground="Yellow" Margin="66,19,0,19" Grid.RowSpan="2"/>
            <ToggleButton x:Name="ThemeToggle"
              Style="{StaticResource SwitchToggleStyle}"
              IsChecked="False" Cursor="Hand"
              Checked="ThemeToggle_Checked"
              Unchecked="ThemeToggle_Unchecked" Margin="7,15,28,15" Grid.RowSpan="2" Grid.Column="2"/>
        </Grid>
    </Border>
</Window>