<Window x:Class="Heyam.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Heyam"
        Width="330" Height="160"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Opacity="0" Loaded="Window_Loaded" FlowDirection="RightToLeft" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)">

    <Border x:Name="BorderRoot" CornerRadius="10" Padding="10" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="IconImage" Width="32" Height="32" Margin="5"/>
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock x:Name="txtTitle" FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="txtMessage" TextWrapping="Wrap" Foreground="White" Margin="0,5,0,0"/>
                <TextBlock Text="توضیحات:" Foreground="White" FontWeight="Bold"/>
                <Button x:Name="ShowDescriptionBTN" Cursor="Hand" Content="مشاهده" Margin="5,-20,0,0" Padding="5,0" Click="ShowDescriptionBTN_Click" Height="20"/>
            </StackPanel>
            <Button Grid.Column="2" Content="❌" Width="40" Height="40" Cursor="Hand"
                    Background="Transparent" Foreground="White" BorderBrush="{x:Null}"
                    Click="Close_Click"/>
        </Grid>
    </Border>
</Window>
