<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heyam"
        xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="Heyam.RegisterWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="RegisterWindow" Height="600" Width="750" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FlowDirection="RightToLeft">
    <Border BorderBrush="#1a1d1a" BorderThickness="3" CornerRadius="3">
        <Grid>
            <Image Source="pack://application:,,,/Resources/Images/LoginWindowBG.jpg" Stretch="Fill"/>
            <WrapPanel>
                <Image Source="Resources/Images/Heyam.png" Height="45" Width="40" Margin="530 0 0 0"/>
                <TextBlock Text="نرم افزار حقوقی هــــیام" TextAlignment="Center" Foreground="Gold" FontSize="14" FontWeight="Heavy" Padding="5 0 0 0" Width="150" Height="20"/>
            </WrapPanel>
            <TextBlock Text="کد سیستم خود را به توسعه دهنده تحویل دهید تا کلید لایسنس را دریافت کنید" Background="#1259D5" Foreground="White" FontSize="11" Margin="392,130,4,443" Padding="5 0 0 0"/>
            <!-- پنل ثبت لایسنس -->
            <Border Background="White" CornerRadius="15" BorderBrush="Gray" BorderThickness="2" 
                Padding="20" Width="315" Height="262" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="414,165,0,0">

                <StackPanel x:Name="LicensePanel" HorizontalAlignment="Center">

                    <!-- فیلد کد سیستم -->
                    <TextBlock Text="کد سیستم:" FontSize="14" Foreground="#666"/>
                    <TextBox x:Name="SystemCodeTB" Width="270" Height="30" BorderThickness="1" BorderBrush="Gray" 
                         Padding="5" Background="#FAFAFA" Margin="0,5,0,10"/>

                    <!-- فیلد لایسنس -->
                    <TextBlock Text="کلید لایسنس:" FontSize="14" Foreground="#666"/>
                    <TextBox x:Name="LicenseKeyTB" Width="270" Height="30" BorderThickness="1" BorderBrush="Gray" 
                         Padding="5" Background="#FAFAFA" Margin="0,5,0,10"/>
                    <!-- دکمه ثبت نام -->
                    <Button x:Name="CheckLicenseBTN" Content="♻ بررسی لایسنس" Width="250" Height="35" Background="#1259D5" Foreground="White" 
                        FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
                        Margin="0,10,0,0" Click="CheckLicenseBTN_Click" />
                    <TextBlock x:Name="ActivatedProgramLabel" Text="نرم افزار با موفقیت فعال شد" Visibility="Hidden" FontSize="14" FontWeight="Bold" TextAlignment="Center" Foreground="Green" Height="28" Margin="0 15"/>
                </StackPanel>
            </Border>
            <!-- پنل ثبت نام -->
            <Border Background="White" CornerRadius="15" BorderBrush="Gray" BorderThickness="2" 
            Padding="20" Width="367" Height="565" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,15">

                <StackPanel x:Name="RegisterPanel" IsEnabled="False" HorizontalAlignment="Center" Margin="0,-10,0,0">

                    <!-- عنوان -->
                    <TextBlock Text="ثبت نام" FontSize="20" FontWeight="Bold" Foreground="#333" 
                    HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <!-- فیلد نام و نام خانوادگی -->
                    <TextBlock Text="نام و نام خانوادگی:" FontSize="12" Foreground="#666"/>
                    <TextBox x:Name="FullNameTB" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                    Padding="5" Background="#FAFAFA" Margin="0,5,0,10"/>

                    <!-- فیلد نام کاربری -->
                    <TextBlock Text="نام کاربری:" FontSize="12" Foreground="#666"/>
                    <TextBox x:Name="UserNameTB" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                     Padding="5" Background="#FAFAFA" Margin="0,5,0,10" TextChanged="UserNameTB_TextChanged">
                    </TextBox>
                    <TextBlock x:Name="UsernameErrorTextBlock" Foreground="Red"
                    Visibility="Collapsed"
                    Margin="5,0,10,10"
                    Text="فقط حروف انگلیسی مجاز است!" />

                    <!-- فیلد رمز عبور -->
                    <TextBlock Text="کلمه عبور:" FontSize="12" Foreground="#666"/>
                    <PasswordBox x:Name="PasswordPB" Visibility="Visible" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                     Padding="5" Background="#FAFAFA" Margin="0,5,0,10" PasswordChanged="PasswordPB_PasswordChanged"/>
                    <TextBlock x:Name="PasswordErrorTextBlock" Foreground="Red"
                    Visibility="Collapsed"
                    Margin="5,0,10,10"
                    Text="فقط حروف و اعداد انگلیسی مجاز است!" />
                    <!-- فیلد تکرار رمز عبور -->
                    <TextBlock Text="تکرار کلمه عبور:" FontSize="12" Foreground="#666"/>
                    <PasswordBox x:Name="RepeatPasswordPB" Visibility="Visible" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                     Padding="5" Background="#FAFAFA" Margin="0,5,0,10" PasswordChanged="RepeatPasswordPB_PasswordChanged"/>
                    <TextBlock x:Name="RepeatPasswordErrorTextBlock" Foreground="Red"
                    Visibility="Collapsed"
                    Margin="5,0,10,10"
                    Text="فقط حروف و اعداد انگلیسی مجاز است!" />
                    <!-- فیلد تلفن همراه -->
                    <TextBlock Text="تلفن همراه:" FontSize="12" Foreground="#666"/>
                    <TextBox x:Name="PhoneNumberTB" Visibility="Visible" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                    Padding="5" Background="#FAFAFA" Margin="0,5,0,10"/>
                    <!-- فیلد نقش کاربر -->
                    <TextBlock Text="انتخاب نقش:" FontSize="12" Foreground="#666"/>
                    <ComboBox x:Name="RoleCB" IsEditable="False" Cursor="Hand" Width="250" Height="25" BorderThickness="1" BorderBrush="Gray" 
                    Padding="5" Background="#FAFAFA" Margin="0,5,0,10" SelectionChanged="CBRole_SelectionChanged">
                        <ComboBoxItem Content="وکیل" Tag="Lawyer"/>
                        <ComboBoxItem Content="منشی" Tag="Secretary"/>
                    </ComboBox>
                    <!-- لیست کشویی -->
                    <Border x:Name="DropdownMenu" Background="#FAFAFA" BorderThickness="1" CornerRadius="5" Width="255" Height="0">
                        <StackPanel>
                            <!--فیلد نام و نام خانوادگی وکیل (برای ثبت نام مدیر دفتر (منشی)-->
                            <TextBlock x:Name="FullNameLawyertxtblock" Visibility="Hidden" Text="نام و نام خانوادگی وکیل:" FontSize="12" Foreground="#666"/>
                            <TextBox x:Name="FullNameLawyerTB" Visibility="Hidden" Width="250" Height="25" BorderBrush="Gray" BorderThickness="1"
                            Padding="5" Background="#FAFAFA" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <!-- دکمه ثبت نام -->
                    <Button x:Name="RegisterBTN" Content="ثبت نام" Width="250" Height="35" Background="#4CAF50" Foreground="White" 
                     FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
                     Margin="0,15,0,0" Click="RegisterBTN_Click"/>
                </StackPanel>
            </Border>
            <TextBlock Text="ارتباط با توسعه دهنده: 09023349043" Background="#E4E4E4" Foreground="Black" FontWeight="Bold" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="203" Padding="4 0"/>
            <Button x:Name="BackToLoginBTN" Content="بازگشت به صفحه ورود" Cursor="Hand" HorizontalAlignment="Left" Margin="607,559,0,0" VerticalAlignment="Top" Click="BackToLoginBTN_Click"/>
        </Grid>
    </Border>
</Window>