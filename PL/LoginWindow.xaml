<Window x:Class="Heyam.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heyam"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Title="نرم افزار حقوقی هـــیام" Height="350" Width="450" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FlowDirection="RightToLeft">
    <Border x:Name="border" BorderBrush="#2A2929" BorderThickness="3" CornerRadius="3">
        <Grid x:Name="MainGrid" FlowDirection="RightToLeft">
            <Image Source="pack://application:,,,/Resources/Images/LoginWindowBG.jpg" Stretch="Fill"/>
            <!-- سایر کنترل‌ها -->
            <TextBlock Text="برای ورود به نرم افزار اطلاعات خود را وارد کنید" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,92"/>
            <TextBlock x:Name="ErrorText" Text="نام کاربری یا رمز عبور اشتباه است!" Visibility="Hidden" Foreground="Yellow" HorizontalAlignment="Left" Margin="144,85,0,106" Width="172"/>
            <WrapPanel Margin="40,110,0,0">
                <TextBlock Text="نام کاربری" Foreground="White" Margin="20,5,20,0"/>
                <TextBox Name="UsernameTB" TextAlignment="Right" BorderBrush="#3D3D3D" Width="200" Height="30"/>
            </WrapPanel>
            <WrapPanel Margin="40,140,74,25">
                <TextBlock Text="رمز عبور" Foreground="White" Margin="20,15,30,15"/>
                <PasswordBox Name="PasswordPB" HorizontalContentAlignment="Right" BorderBrush="#3D3D3D" Width="200" Height="30"/>
            </WrapPanel>
            <TextBlock Text="هنوز ثبت نام نکرده اید؟" Foreground="White" HorizontalAlignment="Left" Margin="60,200,0,56" Width="288"/>
            <TextBlock x:Name="RegisterText" Text="ثبت نام" Cursor="Hand" TextDecorations="Underline" FontSize="14" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Left" Margin="183,197,0,56" Width="185" MouseLeftButtonDown="RegisterText_MouseLeftButtonDown" MouseEnter="RegisterText_MouseEnter" MouseLeave="RegisterText_MouseLeave"/>
            <TextBlock Text="رمز عبور خود را فراموش کرده اید؟" Foreground="White" HorizontalAlignment="Left" Margin="60,230,0,46" Width="288"/>
            <TextBlock x:Name="ForgotPasswordText" Text="فراموشی رمز عبور" Cursor="Hand" TextDecorations="Underline" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Left" Margin="225,229,0,46" Width="185" MouseLeftButtonDown="ForgotPasswordText_MouseLeftButtonDown" MouseEnter="ForgotPasswordText_MouseEnter" MouseLeave="ForgotPasswordText_MouseLeave"/>
            <!-- پاپ‌آپ و نمایش جزئیات -->
            <Popup x:Name="ForgotPasswordPopup"
            Height="340"
            Width="375"
            Placement="Center"
            StaysOpen="True"
            AllowsTransparency="True"
            PopupAnimation="Fade" Margin="0,21,-62,105" Grid.Row="1">
                <Grid>
                    <Border Background="White" Padding="15" CornerRadius="10" BorderBrush="Black" BorderThickness="3" Width="375" Height="340">
                        <GroupBox Header="فراموشی رمز عبور" Background="White" BorderBrush="#ccc" BorderThickness="1" Margin="0,0,0,32">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <WrapPanel>
                                    <TextBlock Text="نام کاربری:" Margin="5"/>
                                    <TextBox x:Name="Usernametxt" Height="30" Width="175" />
                                    <Button x:Name="CheckUsernameBTN" Content="بررسی" Cursor="Hand" Background="#1259D5" Foreground="White" Width="55" Height="30" Margin="10 0" Click="CheckUsernameBTN_Click"/>
                                </WrapPanel>
                                <TextBlock x:Name="ErrorInvalidUsernameText" Text="نام کاربری موجود نمیباشد!" Visibility="Collapsed" Foreground="Crimson" Margin="62,32,124,58"/>
                                <WrapPanel Margin="0,58,0,22">
                                    <TextBlock Text="رمز عبور جدید:" Margin="5"/>
                                    <PasswordBox x:Name="ForgotPasswordPB" IsEnabled="False" Height="30" Width="157" PasswordChanged="ForgotPasswordPB_PasswordChanged"/>
                                </WrapPanel>
                                <TextBlock x:Name="PasswordErrorTextBlock" Foreground="Red"
                                Visibility="Collapsed" FontSize="10"
                                Text="فقط حروف و اعداد انگلیسی مجاز است!" Grid.ColumnSpan="2" Margin="79,92,-79,-91" />
                                <WrapPanel Margin="0,112,0,-32">
                                    <TextBlock Text="تکرار رمز عبور جدید:" Margin="5"/>
                                    <PasswordBox x:Name="ForgotRepeatPasswordPB" IsEnabled="False" Height="30" Width="132" PasswordChanged="ForgotRepeatPasswordPB_PasswordChanged"/>
                                </WrapPanel>
                                <TextBlock x:Name="RepeatPasswordErrorTextBlock" Foreground="Red"
                                Visibility="Collapsed" FontSize="10"                                   
                                Text="فقط حروف و اعداد انگلیسی مجاز است!" Grid.ColumnSpan="2" Margin="79,146,-79,-145" />
                                <WrapPanel Margin="0,22,0,-110">
                                    <Button x:Name="SubmitInfoBTN" Content="تایید اطلاعات" IsEnabled="False" Cursor="Hand" Height="35" Margin="55,150,0,-50" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SubmitInfoBTN_Click"/>
                                    <Button x:Name="CancelBTN" Content="انصراف" Cursor="Hand" Height="35" Width="60" Margin="25,150,0,-50" Background="#F44336" Foreground="White" FontWeight="Bold" Click="CancelBTN_Click"/>
                                    <!--Click="SubmitPayment_Click"-->
                                </WrapPanel>
                            </Grid>
                        </GroupBox>
                    </Border>
                </Grid>
            </Popup>
            <Button x:Name="LoginBTN" Content="ورود" IsDefault="True" Background="#422822" Foreground="White" Cursor="Hand" Width="70" Height="30" Margin="257,190,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoginBTN_Click" />
            <TextBlock Text="ارتباط با توسعه دهنده: 09023349043" Background="#E4E4E4" Foreground="Black" FontWeight="Bold" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="203" Padding="4 0"/>
        </Grid>
    </Border>
</Window>