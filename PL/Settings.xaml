<Window x:Class="Heyam.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
        xmlns:local="clr-namespace:Heyam"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="LegalAutomation" Height="450" Width="600" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FlowDirection="RightToLeft">
    <Border BorderBrush="DimGray" BorderThickness="5" CornerRadius="5">
        <Grid>
            <Grid x:Name="SettingsGrid">
            <!-- ستون‌های اصلی -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <!-- منوی راست‌چین -->
                <ColumnDefinition Width="*"/>
                <!-- محتوای تنظیمات -->
            </Grid.ColumnDefinitions>
            <!-- منوی راست‌چین -->
            <ListBox x:Name="SettingsMenu"
                 SelectionChanged="SettingsMenu_SelectionChanged"
                 Background="#EEEEEE" FontSize="14"
                 BorderBrush="Gray" BorderThickness="1">
                <ListBoxItem Style="{StaticResource ListBoxStyle}" Content="{DynamicResource GeneralSettings}" Cursor="Hand" Tag="General"/>
                <ListBoxItem x:Name="UserManagementItem" Style="{StaticResource ListBoxStyle}" Content="{DynamicResource UsersManagement}" Cursor="Hand" Tag="UsersManagement"/>
                <ListBoxItem x:Name="BackupRestoreItem" Style="{StaticResource ListBoxStyle}" Content="{DynamicResource Backup-Restore}" Cursor="Hand" Tag="Backup"/>
                <ListBoxItem Style="{StaticResource ListBoxStyle}" Content="{DynamicResource AboutUs}" Cursor="Hand" Tag="AboutUs"/>
            </ListBox>
            <!-- محتوای تنظیمات -->
            <Grid x:Name="SettingsContent" Grid.Column="1" Margin="10">
                <TextBlock x:Name="SettingsTitle" FontSize="16" FontWeight="Bold"/>
                <StackPanel x:Name="GeneralSettings" Visibility="Visible">
                    <TextBlock Text="{DynamicResource Screen}" FontSize="16" FontWeight="Bold" Margin="5"/>
                    <Separator/>
                    <CheckBox x:Name="DarkModeCheckBox" Content="{DynamicResource DarkMode}" Cursor="Hand" Checked="DarkModeCheckBox_Checked" Unchecked="DarkModeCheckBox_Unchecked" />
                    <TextBlock Text="{DynamicResource ApplicationLanguage}" FontSize="16" FontWeight="Bold" Margin="5 10"/>
                    <ComboBox x:Name="LanguageSelector" SelectedIndex="0" Cursor="Hand" SelectionChanged="LanguageSelector_SelectionChanged">
                        <ComboBoxItem Content="فارسی" Cursor="Hand" Tag="fa"/>
                        <ComboBoxItem Content="English" Cursor="Hand" Tag="en"/>
                    </ComboBox>
                    <Separator/>
                    <TextBlock Text="{DynamicResource Notifications}" FontSize="16" FontWeight="Bold" Margin="5 10"/>
                    <CheckBox x:Name="AlertsCheckBox" Content="{DynamicResource ActivateNotifications}" Cursor="Hand"
                    IsChecked="{Binding EnableAlerts, Mode=TwoWay}" 
                    Checked="AlertsCheckBox_Checked"
                    Unchecked="AlertsCheckBox_Unchecked"/>
                </StackPanel>
                <StackPanel x:Name="UsersSettings" Visibility="Collapsed">
                    <Grid>
                            <DataGrid Name="UsersDGV" AutoGenerateColumns="False" IsReadOnly="True" CanUserResizeColumns="True" Width="400" Height="250">
                            <DataGrid.Columns>
                                    <DataGridTextColumn Header="نام و نام خانوادگی" Binding="{Binding FullName}" Width="*"/>
                                    <DataGridTextColumn Header="نام کاربری" Binding="{Binding Username}" Width="*"/>
                                    <DataGridTextColumn Header="نقش" Binding="{Binding UserTypeText}" Width="65"/>
                            </DataGrid.Columns>
                        </DataGrid>
                            <WrapPanel Margin="20 0 0 -20">
                                <Button x:Name="AddUserBTN" Content="افزودن کاربر" Cursor="Hand" Background="Green" Foreground="White" Width="100" Height="30" Margin="20,280,0,0" Click="AddUserBTN_Click"/>
                            </WrapPanel>
                        </Grid>
                </StackPanel>
                <StackPanel x:Name="BackupSettings" Visibility="Collapsed">
                    <Button x:Name="SelectPathDatabaseBTN" Content="انتخاب مسیر تهیه فایل پشتیبان" Cursor="Hand" Background="#1259D5" Foreground="White" Margin="0 50" Height="34" Click="SelectPathDatabaseBTN_Click"/>
                    <TextBlock Name="BackupPathText" Text="مسیر انتخاب نشده است" Margin="0 -70" HorizontalAlignment="Center" Height="72"/>
                    <Button x:Name="BackupDatabaseBTN" Content="تهیه فایل پشتیبان" Cursor="Hand" Background="Green" Foreground="White" IsEnabled="False" Click="BackupDatabaseBTN_Click" Height="34"/>
                </StackPanel>
                <StackPanel x:Name="AboutUsSettings" Visibility="Collapsed">
                    <TextBlock FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="نسخه نرم‌افزار: 1.0.0"/>
                    <TextBlock FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" Text="توسعه‌دهنده: حیدر محمدی نصیر - 09023349043"/>
                </StackPanel>
            </Grid>
            <Button x:Name="CloseBTN" Background="#1259D5" Foreground="White" Content="{DynamicResource Back}" Width="76" Height="30" Margin="5 0 0 5" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="CloseBTN_Click"/>
        </Grid>
            <Grid x:Name="AddUserPopup" Visibility="Collapsed" Height="420" Width="450">
                <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="Black" BorderThickness="3" Height="420" Width="450" Margin="0,0,0,-7">
                    <!--Form for Adding Payment-->
                    <Grid Margin="0,-20,0,0">
                        <WrapPanel Margin="15,25,45,213">
                            <TextBlock Text="نام و نام خانوادگی:" Margin="0 5 25 0"/>
                            <TextBox Name="FullNameTB" Width="200" Height="30"/>
                        </WrapPanel>

                        <WrapPanel Margin="-5,62,45,171">
                            <TextBlock Text="نام کاربری:" Margin="20,10,0,0"/>
                            <TextBox Name="UserNameTB" Width="200" Height="30" Margin="63 5 0 0" TextChanged="UserNameTB_TextChanged" />
                            <TextBlock x:Name="UsernameErrorTextBlock" Foreground="Red"
                            Visibility="Collapsed"
                            Margin="135,-2,0,0"
                            Text="فقط حروف انگلیسی مجاز است!" />
                        </WrapPanel>
                        <WrapPanel Margin="0,110,45,130">
                            <TextBlock Text="کلمه عبور:" Margin="15,5,0,0"/>
                            <PasswordBox Name="PasswordPB" Width="200" Height="30" Margin="128,-25,0,0" PasswordChanged="PasswordPB_PasswordChanged"/>
                            <TextBlock x:Name="PasswordErrorTextBlock" Foreground="Red"
                            Visibility="Collapsed"
                            Margin="128,-2,0,0"
                            Text="فقط حروف و اعداد انگلیسی مجاز است!" />
                        </WrapPanel>
                        <WrapPanel Margin="0,155,45,99">
                            <TextBlock Text="تکرار کلمه عبور:" Margin="15,5,0,0"/>
                            <PasswordBox Name="RepeatPasswordPB" Width="200" Height="30" Margin="128,-25,0,0" PasswordChanged="RepeatPasswordPB_PasswordChanged"/>
                            <TextBlock x:Name="RepeatPasswordErrorTextBlock" Foreground="Red"
                            Visibility="Collapsed"
                            Margin="128,-2,0,0"
                            Text="فقط حروف و اعداد انگلیسی مجاز است!" />
                        </WrapPanel>
                        <WrapPanel Margin="0,200,45,52">
                            <TextBlock Text="تلفن همراه:" Margin="15,5,0,0"/>
                            <TextBox Name="PhoneNumberTB"  Width="200" Height="30" Margin="128,-25,0,0"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,200,45,52">
                            <!--فیلد نام و نام خانوادگی وکیل (برای ثبت نام مدیر دفتر (منشی)-->
                            <TextBlock Text="انتخاب نقش:" Margin="15,50,0,0"/>
                            <ComboBox x:Name="RoleCB" Cursor="Hand" IsEditable="False" Width="200" Height="30" Margin="128,-25,0,0" SelectionChanged="RoleCB_SelectionChanged">
                                <ComboBoxItem Content="وکیل" Tag="Lawyer"/>
                                <ComboBoxItem Content="منشی" Tag="Secretary"/>
                            </ComboBox>
                            <!--لیست کشویی-->
                            <Border x:Name="DropdownMenu" Background="#FAFAFA" BorderThickness="1" CornerRadius="5" Width="255" Height="0" Margin="100 0 0 0">
                                <StackPanel>
                                    <!--فیلد نام و نام خانوادگی وکیل (برای ثبت نام مدیر دفتر (منشی)-->
                                    <TextBlock x:Name="FullNameLawyertxtblock" Visibility="Hidden" Text="نام و نام خانوادگی وکیل:" FontSize="12" Foreground="#666" Width="200" Margin="0 10 0 0"/>
                                    <TextBox x:Name="FullNameLawyerTB" Visibility="Hidden" Width="200" Height="30" Margin="0,10,0,0" BorderBrush="Gray" BorderThickness="1"
                                    Padding="5" Background="#FAFAFA"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                        <WrapPanel Margin="35 360 0 0">
                            <Button x:Name="SubmitUser" Content="ثبت کاربر" Cursor="Hand" Background="Green" Foreground="White" Width="100" Height="30" Margin="80,0,25,0" Click="SubmitUser_Click"/>
                            <Button x:Name="Cancel" Content="انصراف" Cursor="Hand" Background="#1259D5" Foreground="White" Width="100" Height="30" Margin="0,0,0,0" Click="Cancel_Click"/>
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
