<Window x:Class="Heyam.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Heyam"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="0" Loaded="Window_Loaded"
        Title="CustomMessageBox" Height="200" Width="400" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- انیمیشن تغییر شفافیت -->
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                    <!-- انیمیشن حرکت از پایین به بالا -->
                    <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,200,0,0" To="0" Duration="0:0:0.5" FillBehavior="HoldEnd"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <!-- پس‌زمینه -->
        <Border BorderBrush="#00477D" BorderThickness="3" CornerRadius="5" Background="#F3F3F3" Padding="5">
            <Grid>
                <!-- آیکون و متن -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360" Height="170">
                    <TextBlock x:Name="MessageIcon" FontSize="40" Text="⚠" TextAlignment="Right" HorizontalAlignment="Right" Foreground="Orange" Width="60" Height="55"/>
                    <Image Source="Resources/Images/Heyam_Blue.png" HorizontalAlignment="Left" Margin="0 -45 0 0" Height="50" Width="60"/>
                    <TextBlock x:Name="MessageTitle" Foreground="#1259D5" Margin="60 -40 0 0" HorizontalAlignment="Left" FlowDirection="RightToLeft" FontSize="16" FontWeight="Bold" Text="پیام تایید" Width="125" Height="40"/>
                    <TextBlock x:Name="MessageText" Foreground="Black" FlowDirection="RightToLeft" FontSize="12" FontWeight="Bold" Text="آیا از انجام این عملیات اطمینان دارید؟" TextWrapping="Wrap" TextAlignment="Center" Margin="0,25,0,0" Height="50"/>
                </StackPanel>

                <!-- دکمه‌ها -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0">
                    <Button x:Name="BtnOk" Background="#1259D5" Foreground="White" Content="خروج" Width="60" Margin="10,0" Click="BtnOk_Click" Height="30" Cursor="Hand"/>
                    <Button Visibility="Collapsed" x:Name="BtnYes" Background="#1259D5" Foreground="White" Content="بله" Width="60" Margin="10,0" Click="BtnYes_Click" Height="30" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
