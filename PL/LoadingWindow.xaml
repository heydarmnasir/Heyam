<Window x:Class="Heyam.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="250" Height="180"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FlowDirection="RightToLeft">
    <Border CornerRadius="15" Background="White" Margin="0,49,0,43" HorizontalAlignment="Center" Width="130">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="88" Width="110">
            <!-- متن لودینگ -->
            <TextBlock Text="در حال ورود..." Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- دایره متحرک -->
            <Canvas Width="45" Height="45">
                <Ellipse Width="45" Height="45" Stroke="DodgerBlue" StrokeThickness="4"
                         StrokeDashArray="2"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="spinner" Angle="0"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Canvas>
        </StackPanel>
    </Border>

    <!-- انیمیشن چرخش -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation
                        Storyboard.TargetName="spinner"
                        Storyboard.TargetProperty="Angle"
                        From="0" To="360" Duration="0:0:1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>