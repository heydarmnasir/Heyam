<UserControl x:Class="Heyam.UC_Reminder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Heyam"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="530">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <!--#FFE3ECE9-->
        <Border>
            <Image x:Name="ShowDescriptionBTN" Cursor="Hand" Source="/Resources/Images/info-blue.png" Margin="10,8,8,8" MouseLeftButtonDown="ShowDescriptionBTN_MouseLeftButtonDown"/>
        </Border>
        <Border Grid.Column="4">
            <Image Source="/Resources/Images/Reminders.png" Margin="4,5,10,5" />
        </Border>
        <Border Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock x:Name="ReminderUserTypeText" Text="کاربر" TextAlignment="Right" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="12" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Width="95"/>
        </Border>
        <Border Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 10 0">
            <TextBlock x:Name="ReminderTitleText" TextAlignment="Right" Text="عنوان یادآور" FontFamily="pack://application:,,,/Resources/Fonts/#IRANSansWeb(FaNum)" FontSize="14" Grid.Column="1" Foreground="White" Width="256" Height="24"/>
        </Border>
        <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 10 0">
            <TextBlock x:Name="RemoveReminderBTN" Text="❌" Foreground="White" FontWeight="Bold" Cursor="Hand" Margin="10,8,8,8" MouseLeftButtonDown="RemoveReminderBTN_MouseLeftButtonDown"/>
        </Border>
    </Grid>
</UserControl>